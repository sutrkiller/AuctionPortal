@model PL.Models.DeliveryEditViewModel

@{
    ViewBag.Title = "Edit delivery status";
}

<h2 class="row"><a class="row btn btn-default" style="border: 0; background: transparent;" href="@Url.Action("ListCreated")"><i class="glyphicon glyphicon-chevron-left"></i></a>&nbsp;&nbsp;Edit delivery status</h2>

<hr />

@using (Html.BeginForm("EditDelivery", "AuctionsManagment", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.BuyerId)

    <div class="form-horizontal">
 

        <div class="form-group">
            @Html.LabelFor(model => model.BuyerName, "Buyer", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <a href="@Url.Action("Details", "Users", new {id = Model.BuyerId})" class="form-control" style="width: 280px;">@Model.BuyerName</a>
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.DeliveryAddress, "Delivery address", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span class="form-control" style="width: 280px;">@Model.DeliveryAddress</span>
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.DeliveryType, "Delivery type", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span class="form-control" style="width: 280px;">@Model.DeliveryType</span>
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.DeliveryAddress, "Payment method", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span class="form-control" style="width: 280px;">@Model.PaymentMethod</span>
            </div>
        </div>

        <div class="form-group">
                @Html.LabelFor(model => model.DeliveryStatuses, "Delivery status", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.DeliveryStatus, Model.DeliveryStatuses, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DeliveryStatus, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <br />
            </div>
            <div class="row form-group top-buffer-large">
                <div class="col-md-offset-2 col-md-3">
                    <input class="btn btn-success" name="command" type="submit" value="Create" />
                </div>
            </div>
    </div>
}

